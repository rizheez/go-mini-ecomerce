# =============================================================================
# MINI E-COMMERCE API CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values according to your environment
# Never commit .env file to version control!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=Mini E-Commerce API
APP_VERSION=1.0.0
APP_ENV=development
APP_PORT=3000
APP_HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=ecommerce_db
DB_SSL_MODE=disable

# Database Connection Pool Settings
DB_MAX_OPEN_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_MAX_LIFETIME_MINUTES=5

# =============================================================================
# JWT AUTHENTICATION CONFIGURATION
# =============================================================================
# JWT Secret Key (MUST be at least 32 characters for security)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-this-in-production

# JWT Settings
JWT_ISSUER=mini-ecommerce
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_HOURS=168

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Password Security
BCRYPT_COST=12

# Rate Limiting (requests per minute)
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_ADMIN=200

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# CORS Settings
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP Settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@mini-ecommerce.com
SMTP_FROM_NAME=Mini E-Commerce

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# Payment Gateway Settings (for future integration)
PAYMENT_PROVIDER=simulation
PAYMENT_WEBHOOK_SECRET=your-webhook-secret-here

# Credit Card Simulation Settings
CC_SIMULATION_SUCCESS_RATE=90
CC_PROCESSING_DELAY_MS=2000

# =============================================================================
# CACHE CONFIGURATION (Optional - Redis)
# =============================================================================
# Redis Settings for caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=false

# Cache TTL (Time To Live) in seconds
CACHE_TTL_PRODUCTS=3600
CACHE_TTL_CATEGORIES=7200
CACHE_TTL_USER_SESSIONS=86400

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Application Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=false
METRICS_PORT=9090

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Image Storage (AWS S3, CloudFlare R2, etc.)
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

# CDN Settings
CDN_BASE_URL=https://cdn.mini-ecommerce.com
CDN_ENABLED=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Air Live Reload
AIR_PROXY_PORT=3001

# Database Migration
MIGRATION_SOURCE=file://migrations
MIGRATION_ENABLED=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Enable these in production environment

# SSL/TLS Settings
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# Production Security
PRODUCTION_MODE=false
TRUST_PROXY=false

# Graceful Shutdown
SHUTDOWN_TIMEOUT_SECONDS=30

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database (used during testing)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=postgres
TEST_DB_PASSWORD=test_password
TEST_DB_NAME=ecommerce_test_db

# Test Settings
TEST_JWT_SECRET=test-jwt-secret-for-testing-only
TEST_BCRYPT_COST=4